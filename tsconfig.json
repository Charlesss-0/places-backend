{
	"compilerOptions": {
		"outDir": "./dist",
		"target": "ESNext",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"typeRoots": ["@types/*"],
		"paths": {
			"types/*": ["./@types/*"]
		}
	},
	"include": ["api", "src/**/*", "./@types/**/*.d.ts"],
	"exclude": ["node_modules"]
}
